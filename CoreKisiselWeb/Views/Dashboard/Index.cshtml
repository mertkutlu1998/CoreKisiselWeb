@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Paneli</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Tema/template/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Tema/template/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Tema/template/assets/vendors/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/Tema/template/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Tema/template/assets/vendors/owl-carousel-2/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Tema/template/assets/vendors/owl-carousel-2/owl.theme.default.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Tema/template/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Tema/template/assets/images/favicon.png" />
</head>
<body>
    @await Component.InvokeAsync("FeatureStatistic")
    <div class="row">
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bütçe Geçmişi</h4>
                    <canvas id="transaction-history" class="transaction-chart"></canvas>
                    <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                        <div class="text-md-center text-xl-left">
                            <h6 class="mb-1">Transfer to Paypal</h6>
                            <p class="text-muted mb-0">7 Aralık 2021 , 09:36</p>
                        </div>
                        <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                            <h6 class="font-weight-bold mb-0">1450$</h6>
                        </div>
                    </div>
                    <div class="bg-gray-dark d-flex d-md-block d-xl-flex flex-row py-3 px-4 px-md-3 px-xl-4 rounded mt-3">
                        <div class="text-md-center text-xl-left">
                            <h6 class="mb-1">Reklam Gelirleri</h6>
                            <p class="text-muted mb-0">12 Ocak 2023 , 21:47</p>
                        </div>
                        <div class="align-self-center flex-grow text-right text-md-center text-xl-right py-md-2 py-xl-0">
                            <h6 class="font-weight-bold mb-0">5000$</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("OpenProject")
    </div>
    @await Component.InvokeAsync("Statistic2")

    @await Component.InvokeAsync("ProjectList")
    
    <div class="row">
        @await Component.InvokeAsync("MessageList")

        @await Component.InvokeAsync("SlideList")

        @await Component.InvokeAsync("ToDoListPanel")
    </div>
        @await Component.InvokeAsync("VisitorMap")
    <script src="~/Tema/template/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Tema/template/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Tema/template/assets/vendors/progressbar.js/progressbar.min.js"></script>
    <script src="~/Tema/template/assets/vendors/jvectormap/jquery-jvectormap.min.js"></script>
    <script src="~/Tema/template/assets/vendors/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Tema/template/assets/vendors/owl-carousel-2/owl.carousel.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Tema/template/assets/js/off-canvas.js"></script>
    <script src="~/Tema/template/assets/js/hoverable-collapse.js"></script>
    <script src="~/Tema/template/assets/js/misc.js"></script>
    <script src="~/Tema/template/assets/js/settings.js"></script>
    <script src="~/Tema/template/assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/Tema/template/assets/js/dashboard.js"></script>
    <!-- End custom js for this page -->
</body>
</html>
