@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header bg-transparent border-0">
    <h3 class="text-white mb-0">Deneyim Tablosu</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-dark table-flush">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Name</th>
                <th scope="col" class="sort" data-sort="status">Date</th>
                <th scope="col">ImageUrl</th>
                <th scope="col" class="sort" data-sort="completion">Description</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Güncelle</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.ExperienceID
                    </th>
                    <td>
                        @item.Name

                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>

                        <img src="@item.ImageUrl" alt="#" />

                    </td>
                    <td>@item.Description</td>
                    <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-warning">Düzenle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Experience/AddExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>
</div>



